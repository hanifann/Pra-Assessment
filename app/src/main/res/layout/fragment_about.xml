<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AboutFragment">
    <TextView
            android:text="@string/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNama" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="@string/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNIM" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNama" app:layout_constraintEnd_toEndOf="@+id/tvNama"
            app:layout_constraintStart_toStartOf="@+id/tvNama"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="@string/kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvKelas"
            app:layout_constraintTop_toBottomOf="@+id/tvNIM" app:layout_constraintEnd_toEndOf="@+id/tvNIM"
            app:layout_constraintStart_toStartOf="@+id/tvNIM"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>